{
	"manifest_version": 2,
	"name": "Set Discord Activity",
	"description": "Set 'Playing', 'Streaming', and 'Listening to' in Discord without the desktop client. Now with YouTube & SoundCloud support!",
	"version": "2.1",
	"author": "timmyRS",
	"minimum_chrome_version": "41",
	"permissions": [
		"storage"
	],
	"browser_action": {
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": ["https://discordapp.com/channels/*"],
			"js": ["discord.js"],
			"run_at": "document_start"
		},
		{
			"matches": ["https://www.youtube.com/*"],
			"js": ["youtube.js"],
			"run_at": "document_idle"
		},
		{
			"matches": ["https://soundcloud.com/*"],
			"js": ["soundcloud.js"],
			"run_at": "document_idle"
		}
	]
}
