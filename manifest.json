{
	"manifest_version": 2,
	"name": "Set Discord Activity",
	"description": "Set 'Playing', 'Streaming' or 'Listening to' in Discord to whatever, without the desktop client.",
	"version": "1.1",
	"author": "timmyRS",
	"minimum_chrome_version": "41",
	"permissions": [
		"storage"
	],
	"browser_action": {
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": ["https://discordapp.com/channels/*"],
			"js": [
				"content_script.js"
			],
			"run_at": "document_start"
		}
	]
}
